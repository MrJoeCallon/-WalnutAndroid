<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/hometop"
        android:layout_height="50dp" >

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:id="@+id/feedback_backbutton"
            android:background="@drawable/back_icon"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/tabbarselectedColor"
            android:text="Feedback"
            android:textSize="22sp"
            android:layout_alignTop="@+id/detailbackButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/feedback_sendbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/hometop"
            android:text="Send"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:textColor="#E4E4E4" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Subject:"
        android:id="@+id/textView16"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/feedback_edittext"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send with all product details"
        android:id="@+id/feedback_checkBox"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:checked="true" />
</LinearLayout>