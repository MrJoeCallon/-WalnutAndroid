<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/hometop"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2" >

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="23dp"
            android:id="@+id/mainview_camerabutton"
            android:background="@drawable/mainview_camera"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:id="@+id/imageView14"
            android:background="@drawable/mainview_icon"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <maojian.android.walnut.ReFlashListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_listview"
        android:background="@color/whiteColor"
        android:layout_marginBottom="40dp"
        android:layout_gravity="left|top"
        android:layout_below="@+id/relativeLayout2" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="0dp"
        android:id="@+id/radioGroup"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_gravity="left|bottom">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tabbarColor"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:textSize="6pt"
            android:textColor="@color/color_radiobutton"
            android:text="home"
            android:drawableTop="@drawable/home_selector"
            android:checked="false" />

    </RadioGroup>

</RelativeLayout>